            .col-sm-9.col-sm-offset-3.col-md-10.col-md-offset-2
                iframe(frameborder=0,onLoad="initIFrameEnd();",width="100%",id="main_frame",name="main_frame",src="/admin/users")
block mainScript
    script(type="text/javascript").
        function initIFrame() {
            var iFrame = document.getElementById("main_frame");
            try {
                var bHeight = iFrame.contentWindow.document.body.scrollHeight;
                var dHeight = iFrame.contentWindow.document.documentElement.scrollHeight;
                var height = Math.max(bHeight, dHeight);
                iFrame.height = height;
            } catch (ex) {
            }
        }

        var timer1 = window.setInterval("initIFrame()", 500); //定时开始

        function initIFrameEnd() {
            var iFrame = document.getElementById("main_frame");
            try {
                var bHeight = iFrame.contentWindow.document.body.scrollHeight;
                var dHeight = iFrame.contentWindow.document.documentElement.scrollHeight;
                var height = Math.max(bHeight, dHeight);
                iFrame.height = height;
            }catch (err){
            }
            // 停止定时
            window.clearInterval(timer1);
        }
    block scripts
